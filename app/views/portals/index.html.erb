<div class="page-header">
  <h1>Listing portals</h1>
</div>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<%= will_paginate @records %>

<table class="table table-striped table-bordered">
  <thead><tr>
    <th>Agent ID</th>
    <th>Portal Name</th>
    <th>Captured Date</th>
    <th>Coordinate</th>
    <th>150 day</th>
    <th>Address</th>
    <th>City</th>
    <th>Note</th>
    <th>Status</th>
    <th>Action</th>
  </tr></thead>

<tbody><% @portals.each do |portal| %>
  <tr>
    <td><%= portal.agent_name %></td>
    <td><%= link_to portal.portal_name, portal.link, target: "_blank" %></td>
    <td><%= portal.captured_date %></td>
    <td><%= portal.lat_coordinate %>, <%= portal.lng_coordinate %></td>
    <td><%= portal.day_of_150 %></td>
    <td><%= portal.location %></td>
    <td><%= portal.city %></td>
    <td><%= portal.note %></td>
    <td><%= portal.status_string %></td>
    <td><%= link_to 'Edit', edit_portal_path(portal), :class => 'btn btn-mini' %> <%= link_to 'Destroy', portal, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %></tbody>
</table>

<%= will_paginate @records %>

<div class="form-actions">
  <%= link_to 'New Portal', new_portal_path, :class => 'btn btn-primary' %>
</div>
